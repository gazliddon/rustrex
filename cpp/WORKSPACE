#Â Hold spdlog locally for now
new_local_repository (
        name = "spdlog",
        path = "third_party/spdlog-5ab033fba5710fc9fc7fbff901e27a8d9d92778e",
        build_file_content = """
cc_library(
        name = "spdlog",
        hdrs = glob([ "include/spdlog/**/*.h", "include/spdlog/**/*.cc", ]),
        includes = ["include"],
        visibility = ["//visibility:public"])
        """,
        )

